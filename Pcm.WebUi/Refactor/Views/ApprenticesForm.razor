    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h5" Align="Align.Center">2. Ausstattung hinzufügen</MudText>
            <MudText Typo="Typo.subtitle2" Align="Align.Center">Text</MudText>
        </CardHeaderContent>
    </MudCardHeader>
