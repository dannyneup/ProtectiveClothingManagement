@using Pcm.Infrastructure.ResponseModels
<MudTable Style="padding: 12px;" 
          Items="@Vm.GetCorrespondingToTrainingId(TrainingId)" 
          Hover="true" 
          Breakpoint="Breakpoint.Sm" 
          T="LoadOutPartResponse">
    <HeaderContent>
        <MudTh>Id</MudTh>
        <MudTh>Anzahl</MudTh>
        <MudTh>Kategorie</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Nr">@context.Id</MudTd>
        <MudTd DataLabel="Sign">@context.Count</MudTd>
        <MudTd DataLabel="Name">@context.CategoryName</MudTd>
        <MudTd>
            <MudStack Row>
                <MudButton
                    OnClick="async () => await ElementSelected.InvokeAsync(context)"
                    Size="@Size.Small"
                    Variant="@Variant.Filled"
                    Color="@Color.Primary">
                    bearbeiten
                </MudButton>
                <MudButton
                    Size="@Size.Small"
                    Variant="@Variant.Filled"
                    Color="@Color.Error">
                    entfernen
                </MudButton>
            </MudStack>
        </MudTd>
    </RowTemplate>
</MudTable>