@using Pcm.Infrastructure.ResponseModels
<MudTable Style="padding: 12px;" 
          Items="@Vm.Trainings" 
          Breakpoint="Breakpoint.Sm" 
          T="TrainingResponse">
    <HeaderContent>
        <MudTh>Titel</MudTh>
        <MudTh>Ausbildungstyp</MudTh>
        <MudTh>Beginn</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Titel">@context.Title</MudTd>
        <MudTd DataLabel="Ausbildungstyp">@context.Type</MudTd>
        <MudTd DataLabel="Beginn">@context.YearStarted</MudTd>
        <MudTd>
            <MudStack Row>
                <MudButton
                    OnClick="async () => await ElementSelected.InvokeAsync(context)"
                    Size="@Size.Small"
                    Variant="@Variant.Filled"
                    Color="@Color.Primary">
                    bearbeiten
                </MudButton>
                <MudButton
                    Size="@Size.Small"
                    Variant="@Variant.Filled"
                    Color="@Color.Error">
                    entfernen
                </MudButton>
            </MudStack>
        </MudTd>
    </RowTemplate>
</MudTable>