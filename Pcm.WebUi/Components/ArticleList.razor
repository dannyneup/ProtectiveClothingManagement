@using Pcm.Infrastructure.Entities
<MudTable T="Article" Items="_articles" Hover="true" SortLabel="Sort By"
          Filter="new Func<Article, bool>(ArticleFilter)">
    <ToolBarContent>
        <MudText Color="Color.Primary" Typo="Typo.h6">@Localization.articles</MudText>
        <MudSpacer/>
        <MudTextField T="string" Placeholder="@Localization.search"
                      Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" @bind-Value="_searchString"/>
        <MudIconButton Icon="@Icons.Filled.AddBox" @onclick="ToggleNewArticlePopover"/>
        <MudPopover Open="_newArticlePopupIsOpen" AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight">
        </MudPopover>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<Article, object>(x => x.Category.Name)">@Localization.category</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<Article, object>(x => x.Size)">@Localization.size</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<Article, object>(x => x.Type.Name)">@Localization.type</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<Article, object>(x => x.Type.Manufacturer)">@Localization.manufacturer</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<Article, object>(x => x.Order.Number)">@Localization.orderNumber</MudTableSortLabel>
        </MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="@Localization.category">@context.Category.Name</MudTd>
        <MudTd DataLabel="@Localization.size">@context.Size</MudTd>
        <MudTd DataLabel="@Localization.type">@context.Type.Name</MudTd>
        <MudTd DataLabel="@Localization.manufacturer">@context.Type.Manufacturer</MudTd>
        <MudTd DataLabel="@Localization.orderNumber">@context.Order.Number</MudTd>
    </RowTemplate>
</MudTable>