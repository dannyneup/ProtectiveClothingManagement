
<MudGrid>
    <MudItem xs="4">
        <MudTextField @bind-Value="PersonRequest.FirstName" Label="@Localization.firstName"
                      Required="true"/>
    </MudItem>
    <MudItem xs="4">
        <MudTextField @bind-Value="PersonRequest.LastName" Label="@Localization.lastName"
                      Required="true"/>
    </MudItem>
    <MudItem xs="4">
        <MudTextField @bind-Value="PersonRequest.EmailAddress" Label="@Localization.emailAddress" 
                      Validation="@(new Func<string, string>(EMailValidation))"/>
    </MudItem>
    <MudItem xs="4">
        <TrainingAutocomplete Value="_trainingResponse" ValueChanged="@(_trainingResponse => OnTrainingChanged(_trainingResponse))"
                              Required="true"/>
    </MudItem>
    <MudItem xs="4">
        <MudTextField Value="PersonRequest.YearStarted" Label="@Localization.yearStarted"
                      Required="true"/>
    </MudItem>
</MudGrid>