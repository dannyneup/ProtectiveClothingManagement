@using Pcm.Application.Models
<MudTable T="Training" 
          Items="Trainings" 
          Hover="true" 
          SortLabel="@Localization.sortBy"
          Filter="TrainingFilter"
          OnRowClick="OnRowClick"
          EditButtonPosition="TableEditButtonPosition.End"
          Context="rowObj">
    <HeaderContent>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<Training, object>(x => x.Name)">@Localization.name</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<Training, object>(x => x.Type)">@Localization.type</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<Training, object>(x => x.TraineeCount)">@Localization.traineeCount</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<Training, object>(x => x.YearCount)">@Localization.yearCount</MudTableSortLabel>
        </MudTh>
        <MudTd/>
    </HeaderContent>
    <ColGroup>
        <col/>
        <col/>
        <col class="small-width-column"/>
        <col class="small-width-column"/>
        <col class="button-column"/>
    </ColGroup>
    <RowTemplate>
        <MudTd DataLabel="@Localization.name">@rowObj.Name</MudTd>
        <MudTd DataLabel="@Localization.type">@rowObj.Type</MudTd>
        <MudTd DataLabel="@Localization.traineeCount">@rowObj.TraineeCount</MudTd>
        <MudTd DataLabel="@Localization.yearCount">@rowObj.YearCount</MudTd>
        <MudTd>
            <MudMenu Icon="@Icons.Material.Filled.MoreHoriz"
                     Class="more-icon-button">
                <MudMenuItem OnClick="() => OnRowEdit(rowObj)">
                    @Localization.edit
                </MudMenuItem>
                <MudMenuItem OnClick="() => OnRowDelete(rowObj)">
                    @Localization.delete
                </MudMenuItem>
            </MudMenu>
        </MudTd>
    </RowTemplate>
</MudTable>