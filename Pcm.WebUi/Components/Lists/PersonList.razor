@using Pcm.Infrastructure.ResponseModels
<MudTable Items="_persons" Hover="true" SortLabel="@Localization.sortBy"
          Filter="new Func<PersonResponse, bool>(PersonFilter)"
          Elevation="Elevation">
    <HeaderContent>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<PersonResponse, object>(x => x.PersonnelNumber)">@Localization.personnelNumber</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<PersonResponse, object>(x => x.FirstName)">@Localization.firstName</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<PersonResponse, object>(x => x.LastName)">@Localization.lastName</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<PersonResponse, object>(x => x.TrainingType)">@Localization.trainingType</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<PersonResponse, object>(x => x.TrainingName)">@Localization.trainingName</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<PersonResponse, object>(x => x.YearStarted)">@Localization.yearStarted</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<PersonResponse, object>(x => x.EmailAddress)">@Localization.emailAddress</MudTableSortLabel>
        </MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="@Localization.personnelNumber">@context.PersonnelNumber</MudTd>
        <MudTd DataLabel="@Localization.firstName">@context.FirstName</MudTd>
        <MudTd DataLabel="@Localization.lastName">@context.LastName</MudTd>
        <MudTd DataLabel="@Localization.trainingType">@context.TrainingType</MudTd>
        <MudTd DataLabel="@Localization.trainingName">@context.TrainingName</MudTd>
        <MudTd DataLabel="@Localization.yearStarted">@context.YearStarted</MudTd>
        <MudTd DataLabel="@Localization.emailAddress">@context.EmailAddress</MudTd>
    </RowTemplate>
</MudTable>