@using Pcm.Infrastructure.Entities
<MudTable Items="_persons" Hover="true" SortLabel="@Localization.sortBy"
          Filter="new Func<Person, bool>(PersonFilter)"
          Elevation="Elevation">
    <HeaderContent>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<Person, object>(x => x.Id)">@Localization.personnelNumber</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<Person, object>(x => x.FirstName)">@Localization.firstName</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<Person, object>(x => x.LastName)">@Localization.LastName</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<Person, object>(x => x.Apprenticeship.Name)">@Localization.apprenticeship</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel SortBy="new Func<Person, object>(x => x.EmailAddress)">@Localization.emailAddress</MudTableSortLabel>
        </MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="@Localization.personnelNumber">@context.Id</MudTd>
        <MudTd DataLabel="@Localization.firstName">@context.FirstName</MudTd>
        <MudTd DataLabel="@Localization.LastName">@context.LastName</MudTd>
        <MudTd DataLabel="@Localization.apprenticeship">@context.Apprenticeship.Name</MudTd>
        <MudTd DataLabel="@Localization.emailAddress">@context.EmailAddress</MudTd>
    </RowTemplate>
</MudTable>