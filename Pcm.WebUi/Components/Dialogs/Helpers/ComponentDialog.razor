@using Pcm.Infrastructure.ResponseModels
<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem xs="7">
                <MudCard>
                    <MudCardHeader>
                        <MudText Typo="Typo.h6" Color="Color.Primary" Class="paperHeader">@Localization.belongingTrainees</MudText>
                    </MudCardHeader>
                    <MudTable T="PersonResponse" Items="_persons"
                              GroupBy="_personInfosGroupDefinition"
                              Dense="true"
                              Height="@Height"
                              FixedHeader="@FixedHeader">
                        <HeaderContent>
                            <MudTh>
                                <MudTableSortLabel SortBy="new Func<PersonResponse, object>(x => x.PersonnelNumber)">@Localization.personnelNumber</MudTableSortLabel>
                            </MudTh>
                            <MudTh>
                                <MudTableSortLabel SortBy="new Func<PersonResponse, object>(x => x.FirstName)">@Localization.firstName</MudTableSortLabel>
                            </MudTh>
                            <MudTh>
                                <MudTableSortLabel SortBy="new Func<PersonResponse, object>(x => x.LastName)">@Localization.lastName</MudTableSortLabel>
                            </MudTh>
                        </HeaderContent>
                        <RowTemplate>
                            <MudTd DataLabel="@Localization.personnelNumber">@context.PersonnelNumber</MudTd>
                            <MudTd DataLabel="@Localization.firstName">@context.FirstName</MudTd>
                            <MudTd DataLabel="@Localization.lastName">@context.LastName</MudTd>
                        </RowTemplate>
                        <GroupHeaderTemplate>
                            <MudTh colspan="5">@($"{context.GroupName}: {context.Key}")</MudTh>
                        </GroupHeaderTemplate>
                    </MudTable>
                </MudCard>
            </MudItem>
            <MudItem xs="5">
                <MudCard>
                    <MudCardHeader>
                        <MudText Typo="Typo.h6" Color="Color.Primary" Class="paperHeader">@Localization.defaultLoadout</MudText>
                    </MudCardHeader>
                    <MudTable T="LoadOutPartResponse" Items="_loadOut"
                              Dense="true"
                              Height="@Height"
                              FixedHeader="@FixedHeader">
                        <HeaderContent>
                            <MudTh>
                                <MudTableSortLabel SortBy="new Func<LoadOutPartResponse, object>(x => x.CategoryName)">@Localization.itemCategory</MudTableSortLabel>
                            </MudTh>
                            <MudTh>
                                <MudTableSortLabel SortBy="new Func<LoadOutPartResponse, object>(x => x.Count)">@Localization.count</MudTableSortLabel>
                            </MudTh>
                        </HeaderContent>
                        <RowTemplate>
                            <MudTd DataLabel="@Localization.itemCategory">@context.CategoryName</MudTd>
                            <MudTd DataLabel="@Localization.count">@context.Count</MudTd>
                        </RowTemplate>
                    </MudTable>
                </MudCard>
            </MudItem>
        </MudGrid>
    </DialogContent>
</MudDialog>
