<MudDialog>
    <DialogContent>
        <MudForm @bind-IsValid="_isValid" @ref="_form">
            @Component
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="OnCancel" Variant="Variant.Outlined" Color="Color.Secondary">@Localization.cancel</MudButton>
        <MudButton OnClick="OnSave" Disabled="@(!_isValid)" Variant="Variant.Filled" Color="Color.Primary">@Localization.save</MudButton>
    </DialogActions>
</MudDialog>