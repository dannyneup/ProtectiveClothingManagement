@using Pcm.Infrastructure.ResponseModels
<MudAutocomplete T="TrainingResponseModel" Value="Value" ValueChanged="@(newTraining => OnValueChanged(newTraining))"
                 Label="@Localization.training"
                 SearchFunc="@SearchTrainingAutocomplete" ResetValueOnEmptyText="true"
                 Required="Required">
    <ItemTemplate>
        <div class="itemTemplate">
            <div class="itemContainerText">
                <MudText Typo="Typo.body1">@context.Name</MudText>
                <MudText Typo="Typo.body2">@context.Type</MudText>
            </div>
        </div>
    </ItemTemplate>
</MudAutocomplete>