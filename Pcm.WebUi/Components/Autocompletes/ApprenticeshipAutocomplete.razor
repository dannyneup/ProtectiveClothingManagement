@using Pcm.Infrastructure.Entities
@using Pcm.Infrastructure.ResponseModels
<MudAutocomplete T="ApprenticeshipResponseModel" Value="@Value" ValueChanged="@(newApprenticeship => OnValueChanged(newApprenticeship))"
                 Label="@Localization.apprenticeship"
                 SearchFunc="@SearchApprenticeshipAutocomplete" ResetValueOnEmptyText="true"
                 Required="Required">
    <ItemTemplate>
        <div class="itemTemplate">
            <div class="itemContainerText">
                <MudText Typo="Typo.body1">@context.Name</MudText>
                <MudText Typo="Typo.body2">@context.Type</MudText>
            </div>
        </div>
    </ItemTemplate>
</MudAutocomplete>